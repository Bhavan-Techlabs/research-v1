# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ==============================================================================
# API KEYS (Required)
# ==============================================================================
OPENAI_API_KEY=your_openai_api_key_here

# ==============================================================================
# GOOGLE SEARCH (Optional - for Google Scholar search)
# ==============================================================================
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CSE_ID=your_google_cse_id_here

# ==============================================================================
# DATABASE (Optional - for prompt management)
# ==============================================================================
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DATABASE=research_assistant
MONGODB_COLLECTION_PROMPTS=prompts

# ==============================================================================
# MODEL CONFIGURATION
# ==============================================================================
DEFAULT_MODEL=gpt-4o-mini
DEFAULT_EMBEDDING_MODEL=text-embedding-3-large
DEFAULT_TEMPERATURE=0.0
DEFAULT_MAX_TOKENS=4000

# ==============================================================================
# DOCUMENT PROCESSING
# ==============================================================================
MAX_FILE_SIZE_MB=10
DEFAULT_CHUNK_SIZE=1000
DEFAULT_CHUNK_OVERLAP=200
MAX_TOKEN_LIMIT=100000

# ==============================================================================
# SEARCH CONFIGURATION
# ==============================================================================
MAX_SEARCH_RESULTS=10
SEARCH_TIMEOUT=60
API_RATE_LIMIT=20

# ==============================================================================
# AUTHENTICATION (Optional - change these for production)
# ==============================================================================
AUTH_COOKIE_NAME=st_research_v1
AUTH_COOKIE_KEY=your_secure_random_key_here
AUTH_COOKIE_EXPIRY_DAYS=30
